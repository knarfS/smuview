# EditorConfig file (https://editorconfig.org) for the QCodeEditor project

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# QtFindReplaceDialog C++ files
[**.cpp]
indent_style = space
indent_size = 4
[**.h]
indent_style = space
indent_size = 2

# QtFindReplaceDialog CMake files
[CMakeLists.txt]
indent_style = tab
indent_size = 4
